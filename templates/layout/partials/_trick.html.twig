<div class="card moreBox" style="display: none;">
    <div class="card-body d-flex flex-row">
        <div class="col-auto">
            <h6 class="card-title font-weight-bold mb-2">{{ trick.name | slice(0, 15) }}</h6>
            <i class="far fa-clock pr-2"></i><small>{{ trick.createdAt | date('d/m/Y') }}</small>
        </div>
        {% if app.user %}
            <div class="float">
                <a href="{{ path('app_trick_edit', {'slug': trick.slug}) }}">
                    <i class="fas fa-pencil-alt fa-lg"></i>
                </a>
                <a href="#"  onclick="event.preventDefault(); confirm('Are you sur to deleted this trick?') && document.getElementById('js-trick-delete-form').submit();">
                 <i class="fa fa-trash lead"></i>
                </a>
            </div>
        {% endif %}
    </div>
    <div class="view overlay">
        {% if trick.images is defined %}
            {% for  image in trick.images %}
                <a href="{{ path('app_trick_show', {'slug': trick.slug}) }}">
                    <img src="{{UploadDirectory~image.name }}" alt=""
                         class="img img-responsive article-img">
                </a>
            {% endfor %}
        {% else %}
            <p>Pas d'image...</p>
        {% endif %}
    </div>

    <div class="card-body">
        <div class="collapse-content">
            <p><small class="text-muted">{{ trick.description | slice(0, 50) ~ '...' }}</small></p>
            <a class="btn btn-flat red-text p-1 my-1 mr-0 mml-1 collapsed"
               href="{{ path('app_trick_show', {'slug': trick.slug}) }}">Lire plus</a>
        </div>
    </div>
</div>

