<article class="col-12 col-md-4 col-lg-3 mb-2 ">
    <div class="card moreBox" style="display: none;">
        <div class="card-body d-flex flex-row">
            <div class="col-auto">
                <h6 class="card-title font-weight-bold mb-2">{{ trick.name | slice(0, 15) }}</h6>
                <i class="far fa-clock pr-2"></i><small>{{ trick.createdAt | date('d/m/Y') }}</small>
            </div>
{#            {% if app.user %}#}
                <div class="float">
                    <a href="{{ path('app_trick_edit', {'slug': trick.slug}) }}">
                        <i class="fas fa-pencil-alt fa-lg"></i>
                    </a>
                   <a href="{{ path('app_trick_delete', {'slug': trick.slug}) }}"
                    onclick="return confirm(`Are you sur to delete the trick : {{ trick.name }} ?`)"><i
                            class="fas fa-trash-alt"></i></a>
                </div>
{#            {% endif %}#}
        </div>
        <div class="view overlay">
            {% if trick.mainImage.name is defined %}
                    <a href="{{ path('app_trick_show', {'slug': trick.slug}) }}">
                        <img src="{{ UploadDirectory~trick.mainImage.name }}" alt=""
                             class="img img-responsive article-img">
                    </a>
            {% else %}
                <p>No image...</p>
            {% endif %}
        </div>

        <div class="card-body">
            <div class="collapse-content">
                <p><small class="text-muted">{{ trick.description | slice(0, 40) ~ '...' }}</small></p>
                <a class="btn btn-flat red-text p-1 my-1 mr-0 mml-1 collapsed"
                   href="{{ path('app_trick_show', {'slug': trick.slug}) }}">Read more</a>
            </div>
        </div>
    </div>

</article>
