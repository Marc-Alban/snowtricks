{% extends 'layout/base.html.twig' %}
{% block title %}Home{% endblock %}
{% block body %}
    {# Top Main #}
    <!-- Background image -->
    <section class="pt-5 pb-5 mt-0 align-items-center d-flex bg-dark bgImgHome">
        <div class="container-fluid">
            <div class="row  justify-content-center align-items-center d-flex text-center h-100">
                <div class="col-12 col-md-12 ">
                    <h1 class="text-light mb-2 mt-5">Snowtrick</h1>
                    <p class="lead  text-light mb-5">The legende is you !</p>

                    <div class="btn-container-wrapper p-relative d-block  zindex-1">
                        <a class="btn btn-link btn-lg   mt-md-3 mb-4 scroll align-self-center text-light"
                           href="#gobottom">
                            <i class="fa fa-angle-down fa-4x text-light"></i>
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </section>
    <section id="gobottom">
        <h2 class="text-center font-italic mb-4">Last figure: </h2>
        {# ---------- #}
        <div class="container">
            <div class="row">
            {% for trick in tricks %}
                        <article class="col-md-3">
                            <figure class="col-lg-12">
                                {% if trick.images is defined %}
                                    {% for  image in trick.images %}
                                        <a href="{{ path('app_trick_show', {id:trick.id}) }}">
                                            <img src="{{ asset('images/')~image.name }}" alt=""
                                                 class="img img-responsive article-img">
                                        </a>
                                    {% endfor %}
                                {% else %}
                                    <p>Pas d'image...</p>
                                {% endif %}
                                <figcaption class="article-caption">
                                    <h1 class="article-title">
                                        <a href="{{ path('app_trick_show', {id:trick.id}) }}">
                                            <h4 class="group card-title inner list-group-item-heading">
                                                {{ trick.name|raw }}</h4>
                                        </a>
                                    </h1>
                                </figcaption>
                            </figure>
                            <div class="article-intro col-lg-12" style="padding-top: 10px;">
                                <a href="{{ path('app_trick_edit', {id:trick.id}) }}">
                                    <i class="fa fa-pencil lead"></i></a>
                                <span class="ml-2 mr-2">|</span>
                                <a href="#"
                                   onclick="event.preventDefault(); confirm('Are you sur to deleted this trick?') && document.getElementById('js-trick-delete-form').submit();">
                                    <i
                                            class="fa fa-trash lead"></i></a>
                            </div>
                        </article>
        {% endfor %}
            </div>
        </div>
    </section>
    <section class="container d-flex justify-content-around loadMore">
        <div class="row">
            <div class="btn btn-primary m-2" id="loadData">Load More</div>
        </div>
    </section>
    <section class="container rowUp d-flex">
        <div class="row">
            <a href="#gobottom"><i class="fa fa-arrow-circle-o-up"></i></a>
        </div>
    </section>
    {% for trick in tricks %}
        <form id="js-trick-delete-form" action="{{ path('app_trick_delete', {id: trick.id} ) }}" method="post"
              style="display: none">
            <input type="hidden" name="csrf_token" value="{{ csrf_token('trick_delete'~ trick.id) }}">
            <input type="hidden" name="_method" value="DELETE">
        </form>
    {% endfor %}
{% endblock %}
