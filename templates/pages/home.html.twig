{% extends 'layout/base.html.twig' %}
{% block title %}Home{% endblock %}
{% block body %}
    {# Top Main #}
    <!-- Background image -->
    <section class="pt-5 pb-5 mt-0 align-items-center d-flex bg-dark bgImgHome">
        <div class="container-fluid">
            <div class="row  justify-content-center align-items-center d-flex text-center h-100">
                <div class="col-12 col-md-12 ">
                    <h1 class="text-light mb-2 mt-5">Snowtrick</h1>
                    <p class="lead  text-light mb-5">The legende is you !</p>
                    <div class="btn-container-wrapper p-relative d-block  zindex-1">
                        <a class="btn btn-link btn-lg   mt-md-3 mb-4 scroll align-self-center text-light"
                           href="#gobottom">
                            <i class="fa fa-angle-down fa-4x text-light"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="gobottom">
        <h2 class="text-center font-italic mb-4">Last figures: </h2>
        <div class="container">
            <div class="row article">
            {% for trick in tricks %}
                {% include 'layout/partials/_trick.html.twig' %}
            {% endfor %}
            </div>
        </div>
    </section>
    <div class="mt-5">
        <div class="col-lg-12 text-center p-0 mx-auto w-50 mb-2">
            <button id="loadMore" class="btn btn-primary">See more tricks</button>
        </div>
    </div>
    <section class="container rowUp d-flex " id="showLess">
        <div class="row">
            <a class="scroll" href="#gobottom"><i class="fas fa-arrow-up"></i></a>
        </div>
    </section>
    {% for trick in tricks %}
        <form id="js-trick-delete-form" action="{{ path('app_trick_delete', {id: trick.id} ) }}" method="post"
              style="display: none">
            <input type="hidden" name="csrf_token" value="{{ csrf_token('trick_delete'~ trick.id) }}">
            <input type="hidden" name="_method" value="DELETE">
        </form>
    {% endfor %}
{% endblock %}
