{% extends 'base.html.twig' %}
{% block title %}Créer un tricks{% endblock %}
{% block body %}
    <div class="container">
        <div class="row col-lg-10 col-md-10 d-content">
            <div class="container">
                <div class="row">
                    <div class="col-lg-10 mx-auto">
                        {{ form_start(form,{
                            'attr':{'class':'trick-form'}
                        }) }}

                        <h5>Titre</h5>
                        {{ form_row(form.title, {
                            'attr': {'class': 'form-control'}
                        }) }}
                        <hr>
                        <h5>Description</h5>
                        {{ form_row(form.description, {
                            'attr': {'class': 'form-control'}
                        }) }}
                        <hr>
                        <h5>Catégorie</h5>
                        {{ form_row(form.categorie, {
                            'attr': {'class': 'form-control'}
                        }) }}
                        <hr>
                        <h5>Images</h5>
                        {{ form_row(form.content, {
                            'attr': {'class': 'form-control'}
                        }) }}
                        <hr>
                        <h5>Videos</h5>
                        {{ form_row(form.url, {
                            'attr': {'class': 'form-control'}
                        }) }}
                        <hr>
                        <a class="btn btn-primary" href="{{ path('home') }}">Annuler</a>
                        <button type="submit" class="btn btn-primary pull-right">Enregistrer</button>
                        {{ form_end(form)}}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}